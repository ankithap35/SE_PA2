<% content_for :title, "Editing movie" %>

<h1 class="page-title">Editing Movie</h1>

<div class="form-container">
  <%= render "form", movie: @movie %>
</div>

<div class="action-links" style="display: flex; gap: 10px; align-items: center;">
  <%= link_to "Show movie", @movie, class: "btn btn-show", style: "background-color: #ffc107; color: black; padding: 8px 10px; text-decoration: none; border-radius: 5px;" %>
  
  <%= link_to "Back to movies", movies_path(sort: session[:sort], direction: session[:direction]), class: "btn btn-back", style: "background-color: #17a2b8; color: white; padding: 8px 10px; text-decoration: none; border-radius: 5px;" %>
</div>
