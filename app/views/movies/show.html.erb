<p style="color: green"><%= notice %></p>

<div class="movie-card">
  <h2 class="movie-title"><%= @movie.title %></h2>

  <div class="movie-details">
    <p><strong>Rating:</strong> <%= @movie.rating %></p>
    <p><strong>Release Date:</strong> <%= @movie.release_date.strftime('%d %B %Y') %></p>
    <p><strong>Description:</strong> <%= @movie.description %></p>
  </div>
</div>

<div class="movie-actions" style="display: flex; gap: 10px; align-items: center;">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-edit", style: "background-color: #ffc107; color: black; padding: 5px 10px; text-decoration: none; border-radius: 5px;" %>
  
  <%= link_to "Back to movies", movies_path(sort: session[:sort], direction: session[:direction]), class: "btn btn-back", style: "background-color: #17a2b8; color: white; padding: 5px 10px; text-decoration: none; border-radius: 5px;" %>
  
  <%= link_to "Destroy this movie", @movie, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete", style: "background-color: #dc3545; color: white; padding: 5px 10px; border-radius: 5px;" %>
</div>